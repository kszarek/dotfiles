[user]
	name = Krzysztof Szarek
	email = kszarek@gmail.com
[core]
	autocrlf = input
	safecrlf = true
  excludesfile = ~/.gitignore
[alias]
    tags = tag -l
    branches = branch -a
    remotes = remote -v
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
[push]
	default = simple
[credential]
    helper = cache --timeout=28800
[color]
  # Use colors in Git commands that are capable of colored output when outputting to the terminal
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
